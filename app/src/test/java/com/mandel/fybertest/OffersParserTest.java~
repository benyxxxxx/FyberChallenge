package com.mandel.fybertest;

import com.mandel.fybertest.model.Offer;
import com.mandel.fybertest.activity.OffersParser;

import org.junit.Before;
import org.junit.Test;

import java.io.BufferedReader;
import java.io.FileInputStream;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.List;

import static org.junit.Assert.assertEquals;

public class OffersParserTest {

	
	@Before
	public void setup()
	{
	}

	@Test
	public void parseJson() throws Exception {
		
		String data = readFile("sample_data.json");
		List<Offer> list = OffersParser.parseJson(data);
		assertEquals(2, list.size());
		assertEquals("Tap  Fish", list.get(0).getTitle());
	}
	
	@Test
	public void parseXml() throws Exception {
		
	        String data = readFile("sample_data.xml");
		List<Offer> list = OffersParser.parseXml(data);
	        assertEquals(2, list.size());
	}

	final String ASSET_BASE_PATH = "../app/src/test/assets/";
	public String readFile (String filename) throws IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(new FileInputStream(ASSET_BASE_PATH + filename)));
		StringBuilder sb = new StringBuilder();
		String line = br.readLine();
		while (line != null) {
			sb.append(line);
			line = br.readLine();
		}

		return sb.toString();
	}
}
